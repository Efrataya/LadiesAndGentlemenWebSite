@model LadiesAndGentlemenWebSite.Models.Order

@{
    ViewData["Title"] = "My Order";
}

<h2>Order Details</h2>

<div>
    <h4>Order No. @Html.DisplayNameFor(model => model.Id) </h4>
    <hr />
    @foreach (var item in Model.Carts)
    {
        <div>@item.Product.Description @item.Product.Image </div>
    }
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sum)
        </dd>
    </dl>
</div>
@foreach (var item in Model.Carts)
{
    <div>@item.Product.Description @item.Product.price </div>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
